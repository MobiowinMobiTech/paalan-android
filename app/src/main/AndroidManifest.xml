<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phyder.paalan">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!--android:name=".activity.TestOneSignal"-->

    <application
        android:name=".utils.Application"
        android:allowBackup="true"
        android:icon="@drawable/paalan_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.PaalanSplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.WhatsNew"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
           />

        <activity android:name=".activity.RegisterUser"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>


        <activity android:name=".activity.Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".activity.ActivityFragmentPlatform"
            android:theme="@style/AppTheme" />

        <!--<activity android:name=".activity.RegisterUserActivity"/>-->
        <!-- Firebase Notifications -->
        <service android:name=".services.NotificationRecieverService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <intent-filter>
                <action android:name=".NotificationRecieverService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service android:name=".services.FCMTokenGeneratorService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


        <receiver android:name=".services.NotificationReciever">
            <intent-filter>
                <action android:name="com.phyder.paalan.SendBroadcast" >
                </action>
            </intent-filter>
        </receiver>

        <!-- ./Firebase Notifications -->



        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="@string/fabric_id" />
    </application>
</manifest>