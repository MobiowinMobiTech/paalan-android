<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phyder.paalan">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>


    <!-- android:name=".activity.TestOneSignal" -->
    <application
        android:name="com.mobiowin.paalan.utils.Application"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/paalan_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.mobiowin.paalan.activity.PaalanSplashActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.mobiowin.paalan.activity.ForgotPassword"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name="com.mobiowin.paalan.activity.Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity
            android:name="com.mobiowin.paalan.activity.WhatsNew"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity
            android:name="com.mobiowin.paalan.activity.Donate"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"/>


        <activity
            android:name="com.mobiowin.paalan.activity.RegisterUser"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity
            android:name="com.mobiowin.paalan.activity.ActivityFragmentPlatform"
            android:theme="@style/AppTheme"
            android:configChanges="keyboardHidden|orientation|screenSize"/>


        <service android:name="com.mobiowin.paalan.services.NotificationRecieverService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <intent-filter>
                <action android:name=".NotificationRecieverService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <service android:name="com.mobiowin.paalan.services.FCMTokenGeneratorService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name="com.mobiowin.paalan.services.NotificationReciever">
            <intent-filter>
                <action android:name="com.phyder.paalan.SendBroadcast"></action>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- ./Firebase Notifications -->

        <service android:name="com.mobiowin.paalan.services.CronJobService"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="815125c9312f62bd30e41300a5c1738d3d6cb349" />

    </application>

</manifest>