<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <TextView
        android:id="@+id/txtWizardName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:text="Basic Info"
        android:padding="7dp"
        android:layout_weight="1"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/registerUserWizard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.2"/>

    <LinearLayout
        android:id="@+id/stepViewRegistration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_margin="7dp"
        android:weightSum="8">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <View
            android:id="@+id/stepViewCredentials"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:padding="7dp"
            android:layout_margin="3dp"
            android:background="@drawable/wizard_selected"
            android:layout_weight="1"/>

        <View
            android:id="@+id/stepViewAddress"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="3dp"
            android:padding="7dp"
            android:background="@drawable/wizard_un_selected"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>


    </LinearLayout>


</LinearLayout>