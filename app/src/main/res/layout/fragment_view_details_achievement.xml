<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.phyder.paalan.utils.TextViewOpenSansSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/primary_text"
        android:background="@color/primary_light"
        android:text="@string/acheivement"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            >

        <com.phyder.paalan.utils.TextViewOpenSansSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:text="@string/view_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content"
            >

        <com.phyder.paalan.utils.TextViewOpenSansRegular
            android:id="@+id/txtTitleValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            >

            <com.phyder.paalan.utils.TextViewOpenSansSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:text="@string/view_sub_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content"
            >

            <com.phyder.paalan.utils.TextViewOpenSansRegular
                android:id="@+id/txtSubTitleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            >

            <com.phyder.paalan.utils.TextViewOpenSansSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:text="@string/view_desc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content"
            >

            <com.phyder.paalan.utils.TextViewOpenSansRegular
                android:id="@+id/txtDescValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            >

            <com.phyder.paalan.utils.TextViewOpenSansSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:text="@string/view_Other"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content"
            >

            <com.phyder.paalan.utils.TextViewOpenSansRegular
                android:id="@+id/txtOtherValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAttachmentSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.phyder.paalan.utils.TextViewOpenSansSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/primary_text"
        android:background="@color/primary_light"
        android:text="@string/attachment"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imgFirstView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            />

        <ImageView
            android:id="@+id/imgSecondView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            />

        <ImageView
            android:id="@+id/imgThirdView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_add_circle_outline_black_24dp"/>

        <ImageView
            android:id="@+id/imgForthView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_add_circle_outline_black_24dp"/>

    </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="10dp">

        <com.phyder.paalan.utils.ButtonOpenSansSemiBold
            android:id="@+id/btnUpdateAchievement"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_button"
            android:text="@string/upate"
            android:textColor="@drawable/button_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.phyder.paalan.utils.ButtonOpenSansSemiBold
            android:id="@+id/btnDeleteAchievement"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_button"
            android:text="@string/delete"
            android:textColor="@drawable/button_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


</LinearLayout>